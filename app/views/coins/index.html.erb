<p style="color: green"><%= notice %></p>

<h1>Coins</h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th> Description </th>
        <th> Acronym </th>
        <th> Url Image</th>
      </tr>
    </thead>
    
    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <td> <%= image_tag coin.url_image, size: "25x25" %> </td>
          <td><%= link_to 'show', coin, class: "btn btn-xs btn-primary" %></td>
          <td><%= link_to 'edit', edit_coin_path(coin), class: "btn btn-xs btn-primary" %></td>
          <td><%= link_to 'delete', coin, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-xs btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


<p><%= link_to "New coin", new_coin_path %></p>
<p><%= link_to 'Back', root_path %></p>
