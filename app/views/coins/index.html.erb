<p style="color: green"><%= notice %></p>

<h1><%= t('coins')%></h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= @coins.human_attribute_name(:description)%></th>
        <th><%= @coins.human_attribute_name(:acronym)%></th>
        <th><%= @coins.human_attribute_name(:url_image)%></th>
      </tr>
    </thead>
    
    <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <td> <%= image_tag coin.url_image, size: "25x25" %> </td>
          <td><%= link_to t('links.show'), coin, class: "btn btn-xs btn-primary" %></td>
          <td><%= link_to t('links.edit'), edit_coin_path(coin), class: "btn btn-xs btn-primary" %></td>
          <td><%= link_to t('links.delete'), coin, data: { turbo_method: :delete, turbo_confirm: t('confirm_delete') }, class: "btn btn-xs btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


<p><%= link_to t('links.new_coin'), new_coin_path %></p>
<p><%= link_to t('links.back'), root_path %></p>
